entrypoint = "index.html"
modules = ["nodejs-20", "python-3.11"]

hidden = [".pythonlibs", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[env]
PATH = "/home/runner/$REPL_SLUG/.config/npm/node_global/bin:/home/runner/$REPL_SLUG/node_modules/.bin:${PATH}"
npm_config_prefix = "/home/runner/$REPL_SLUG/.config/npm/node_global"

[deployment]
deploymentTarget = "static"
build = ["npm", "run", "build"]
run = ["npm", "run", "preview"]
publicDir = "dist"
ignorePorts = false

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "React Frontend"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Flask Backend (Optional)"

[[workflows.workflow]]
name = "React Frontend"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm install && npm run dev"
waitForPort = 3000

[[workflows.workflow]]
name = "Flask Backend (Optional)"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "python app.py"
waitForPort = 5000

[agent]
integrations = ["twilio_send_message==1.0.0", "flask_stripe==1.0.0"]

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 5000
externalPort = 5000
