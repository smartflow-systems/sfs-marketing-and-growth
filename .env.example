# ===================
# Frontend Environment Variables (Vite)
# ===================

# Stripe Configuration
VITE_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Backend API URL (for production)
VITE_API_URL=http://localhost:5000

# Plausible Analytics (optional)
VITE_PLAUSIBLE_DOMAIN=yourdomain.com

# Feature Flags
VITE_ENABLE_ANALYTICS=true

# ===================
# Backend Environment Variables (Flask)
# ===================

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/smartflow
# Or use SQLite for development:
# DATABASE_URL=sqlite:///smartflow.db

# Flask Session Secret
SESSION_SECRET=your-secret-key-change-in-production

# Stripe (Backend)
STRIPE_SECRET_KEY=sk_test_your_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Stripe Price IDs (create these in Stripe dashboard)
STRIPE_PRICE_STARTER_MONTHLY=price_xxxxx
STRIPE_PRICE_STARTER_ONEOFF=price_xxxxx
STRIPE_PRICE_FLOWKIT_MONTHLY=price_xxxxx
STRIPE_PRICE_FLOWKIT_ONEOFF=price_xxxxx
STRIPE_PRICE_LAUNCHPACK_MONTHLY=price_xxxxx
STRIPE_PRICE_LAUNCHPACK_ONEOFF=price_xxxxx

# ===================
# AI Services (OpenAI & Anthropic)
# ===================

# Choose your preferred AI provider: "openai" or "anthropic"
AI_PROVIDER=anthropic

# OpenAI API Key (for GPT-4)
OPENAI_API_KEY=sk-proj-your-openai-api-key-here

# Anthropic API Key (for Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ===================
# Email Configuration (SMTP)
# ===================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=noreply@smartflow.systems

# ===================
# SMS Configuration (Twilio)
# ===================

TWILIO_ACCOUNT_SID=ACxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# ===================
# Google Calendar Integration
# ===================

GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:5000/oauth/callback

# ===================
# Redis (for caching and rate limiting)
# ===================

REDIS_URL=redis://localhost:6379/0

# ===================
# File Storage (AWS S3 / Cloudinary)
# ===================

# AWS S3
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_S3_BUCKET=smartflow-assets
AWS_REGION=us-east-1

# Or use Cloudinary
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name

# ===================
# Social Media APIs (for automation)
# ===================

# Meta/Facebook/Instagram
META_APP_ID=your-app-id
META_APP_SECRET=your-app-secret
META_ACCESS_TOKEN=your-access-token

# Twitter/X API
TWITTER_API_KEY=your-api-key
TWITTER_API_SECRET=your-api-secret
TWITTER_ACCESS_TOKEN=your-access-token
TWITTER_ACCESS_SECRET=your-access-secret

# LinkedIn API
LINKEDIN_CLIENT_ID=your-client-id
LINKEDIN_CLIENT_SECRET=your-client-secret

# ===================
# Monitoring & Analytics
# ===================

# Sentry (error tracking)
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Application Settings
FLASK_ENV=development
FLASK_DEBUG=True
LOG_LEVEL=INFO
